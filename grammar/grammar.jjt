ASTStart StartCommandLine() #Start : {}
{
   (<WHERE>)? DisjunctionExpression() "\n"
   { return jjtThis; }
}

ASTStart generateAST() #Start : {}
{
   (<WHERE>)? DisjunctionExpression() <EOF>
   { return jjtThis; }
}

ASTStart generateSubAST() #Start : {}
{
   DisjunctionExpression()
   { return jjtThis; }
}


void DisjunctionExpression() : {}
{
  (
    ConjunctionExpression() (((<DISJUNCTION>) ConjunctionExpression()) #Or(2) )*
  )
}

void ConjunctionExpression() : {}
{
  (
    UnaryExpression() (((<CONJUNCTION>) UnaryExpression()) #And(2) )*
  )
}

void UnaryExpression() : {}
{
   (<OPEN_PARENTHESES>) DisjunctionExpression() (<CLOSE_PARENTHESES>) | RelationalExpression()
}

void RelationalExpression() #Expression : {}
{
    Key()
      (
        UnaryOperator() UnaryValue() Timestamp()
      |
        BinaryOperator() BinaryValue() BinaryValue() Timestamp()
      )
}

void Key() :
{
  Token key;
  Token function;
}
{
  (
    LOOKAHEAD(2)

    function=<ALPHANUMERIC> <OPEN_PARENTHESES> (key=<COMMA_SEPARATED_SIGNED_INTEGER> | key=<COMMA_SEPARATED_ALPHANUMERIC>) " ?" <CLOSE_PARENTHESES>
    { jjtThis.key(new DynamicFunction(function.image, key.image.substring(0, key.image.length()-1)));} #FunctionKey
  |
    (key=<RESERVED_IDENTIFIER> | key=<SIGNED_INTEGER> | key=<SIGNED_DECIMAL> | key=<ALPHANUMERIC>)
    { jjtThis.key(key.image); } #Key
  )
}

void UnaryValue() :
{
  Token function;
  Token key;
  Token word;
  String value = "";
  List<String> records = Lists.newArrayList();
  ASTStart ccl;
}
{
  LOOKAHEAD(2)

  function=<ALPHANUMERIC> <OPEN_PARENTHESES>
   (
     (key=<SIGNED_INTEGER> | key=<ALPHANUMERIC>) <CLOSE_PARENTHESES>
     { jjtThis.value(new ImplicitFunction(function.image, key.image.substring(0, key.image.length()-1)));} #FunctionValue
   |
     LOOKAHEAD(2)

     (key=<COMMA_SEPARATED_SIGNED_INTEGER> | key=<COMMA_SEPARATED_ALPHANUMERIC>)
     (word=<COMMA_SEPARATED_SIGNED_INTEGER> { records.add(word.image.substring(0, word.image.length()-1)); })*
     (word=<SIGNED_INTEGER>) { records.add(word.image);} <CLOSE_PARENTHESES>
     { jjtThis.value(new ExplicitRecordsFunction(function.image, key.image.substring(0, key.image.length()-1), records));} #FunctionValue
   |
    (key=<COMMA_SEPARATED_SIGNED_INTEGER> | key=<COMMA_SEPARATED_ALPHANUMERIC>) ccl=generateSubAST() <CLOSE_PARENTHESES>
     { jjtThis.value(new ASTExplicitCclASTFunction(function.image, key.image.substring(0, key.image.length()-1), ccl));} #FunctionValue
   )
|
  ( LOOKAHEAD(2) (word=<QUOTED_STRING> | word=<SIGNED_INTEGER> | word=<SIGNED_DECIMAL> | word=<ALPHANUMERIC> | word=<NON_ALPHANUMERIC_AND_ALPHANUMERIC>) { value += (value.equals("")) ? word.image : " " + word.image; })+
  { jjtThis.value(word.image); } #Value
}

void BinaryValue() :
{
  Token value;
}
{
  (value=<QUOTED_STRING> | value=<SIGNED_INTEGER> | value=<SIGNED_DECIMAL> | value=<ALPHANUMERIC> | value=<NON_ALPHANUMERIC_AND_ALPHANUMERIC>)
  { jjtThis.value(value.image); } #Value
}

void UnaryOperator() :
{
  Token operator;
}
{
  operator=<UNARY_OPERATOR> { jjtThis.operator(operator.image); } #Operator
}

void BinaryOperator() :
{
  Token operator;
}
{
  operator=<BINARY_OPERATOR> { jjtThis.operator(operator.image); } #Operator
}

void Timestamp() :
{
  Token word;
  String timestamp = "";
}
{
  (<TIMESTAMP> ((word=<QUOTED_STRING> | word=<SIGNED_INTEGER> | word=<SIGNED_DECIMAL> | word=<ALPHANUMERIC> | word=<NON_ALPHANUMERIC_AND_ALPHANUMERIC>) { timestamp += (timestamp.equals("")) ? word.image : " " + word.image; })+
  { jjtThis.timestamp(timestamp); })? #Timestamp
}